@model scan.Models.Manga
@{
    Layout = "_LayoutAdmin";
}

<h1>Criar Novo Manga</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title">Título:</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Descrição:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3" id="newAuthor">
        <label asp-for="AuthorId">Novo Autor:</label>
        <input asp-for="Author" type="text" name="NewAuthorName" class="form-control" placeholder="Digite o nome do autor"/>
    </div>
    
    <button type="submit" class="btn btn-primary">Criar Manga</button>
</form>
